<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IslamiC37" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorGold</item>
        <item name="colorPrimaryVariant">#AC8C5E</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="bottom_navigation_style" parent="Theme.IslamiC37">
        <item name="backgroundTint">@color/colorGold</item>
    </style>
    <style name="background" parent="Theme.IslamiC37">
        <item name="android:background">@drawable/default_bg</item>
    </style>
    <style name="sebhaHeadLayout" parent="Theme.IslamiC37">
        <item name="android:background">@drawable/head_sebha_logo</item>
    </style>
    <style name="sebhaBodyLayout" parent="Theme.IslamiC37">
        <item name="android:background">@drawable/body_sebha_logo</item>
    </style>
</resources>