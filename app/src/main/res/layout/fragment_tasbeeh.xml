<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/islami_bg">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="اسلامي"
        android:textSize="32sp"
        android:layout_marginTop="10dp"
        android:id="@+id/islamitxt"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <ImageView
        android:id="@+id/sebhaHead"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/islamitxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:theme="@style/sebhaHeadLayout"
        android:adjustViewBounds="true"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:id="@+id/sebhaBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/sebhaHead"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="65dp"
        android:layout_marginRight="20dp"
        android:theme="@style/sebhaBodyLayout"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sebhaBody"
        android:textSize="32sp"
        android:text="عدد التسبيحات"
        android:layout_marginTop="10dp"
        android:id="@+id/numof_tasbeh_txt"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="55dp"
        android:layout_height="65dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numof_tasbeh_txt"
        android:text="33"
        android:textSize="22sp"
        android:gravity="center"
        android:background="@drawable/round_borders"
        android:textStyle="bold"
        android:paddingHorizontal="9dp"
        android:id="@+id/numof_tasbeh"
        android:backgroundTint="#CAB497"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numof_tasbeh"
        android:text="سبحان الله"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:gravity="center"
        android:background="@drawable/round_borders"
        android:textStyle="bold"
        android:paddingHorizontal="14dp"
        android:backgroundTint="@color/colorGold"
        android:layout_marginVertical="10dp"
        android:id="@+id/albaqyat_alsalhat"
        />


</androidx.constraintlayout.widget.ConstraintLayout>